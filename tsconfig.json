{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "target": "ES2020",
    "resolveJsonModule": true,
    "sourceMap": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "tests"
  ]
}
